<center><h2><b><%= @thr.title %></b></h2></center>
<% if user_signed_in? && current_user.admin %> 
    <%= link_to "Delete", board_thr_path(@board, @thr), data: { confirm: 'Are you sure you want to delete thread "' + @thr.title + '" ?'}, method: :delete, class: "btn btn-danger", role: "button" %> 
    <%= link_to "Edit", edit_board_thr_path(@board, @thr), class: "btn btn-success", role: "button" %>
 <% end %>
<% @post_number = 1 %>
<%- @op_post.each do |post| %>
    <%= render partial: 'post', :locals => { post: post, thr: @thr, board: @board } %>
<% end %>

<%- @simple_posts.each do |post| %> 
    <%= render partial: 'post', :locals => { post: post, thr: @thr, board: @board } %>       
<% end %>

<% if user_signed_in? %>
    <center><%= link_to "New Post", 'javascript:;', id: "show_form", class: "btn btn-success", role: "button" %></center>
    <div class="form" id="post_form">
        <%= render "posts/form" %> 
    </div> 
    <br> 
<% else %>
    <div class="jumbotron">
    <center><h2>Login to create post, pls.</h2></center> 
    </div> 
<% end %>   


