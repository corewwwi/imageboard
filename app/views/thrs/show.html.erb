<center><h2><%= @thr.title %></h2></center>

<%- @op_post.each do |post| %>
    <div class="panel panel-primary" id=<%= post.id %>>
        <div class="panel-heading">
            <h3 class="panel-title" >
                
                <% unless post.anon %>
                    <% if post.user.admin %>
                        <b>Admin</b>
                    <% else %>
                        <%= post.user.email %>  
                    <% end %>
                <% else %>
                    Anonymous
                <% end %>           

                <%= post.created_at %>
                #<%= post.id %>
            </h3>
        </div>
        <div class="panel-body">
            <%= image_tag post.pic.url(:thumb) unless post.pic_file_size == nil%>
            <%= post.content %>
            
        </div>
              
        <% if post.answers.count > 0 %>
            <div class="panel-footer">
                <em> Ответы: </em>
                    <% post.answers.each do |answer| %>
                    <%= link_to ">>#{answer.id}", board_thr_path(@board, @thr, anchor: answer.id) %>
                <% end %>     
            </div>
        <% end %>        
    </div>
<% end %>




<%- @simple_posts.each do |post| %> 
    <% if post.sage %>
        <div class="panel panel-danger" id=<%= post.id %>>
    <% else %>    
        <div class="panel panel-success" id=<%= post.id %>>
    <% end %>    
        <div class="panel-heading">
            <h3 class="panel-title">
                <% unless post.anon %>
                    <% if post.user.admin %>
                        <b>Admin</b>
                    <% else %>
                        <%= post.user.email %>  
                    <% end %>
                <% else %>
                    Anonymous
                <% end %> 
                <%= post.created_at %>
                #<%= post.id %>
            </h3>
        </div>
        <div class="panel-body">
            <%= image_tag post.pic.url(:thumb) unless post.pic_file_size == nil %>

            <% content = post.content %>
            <% parent_posts_id = content.scan(/>>\d+/).join(' ').scan(/\d+/) %>
            <% parent_posts_id.each do |parent_post_id| %>
                <% if @thr.posts.find_by_id(parent_post_id) %>
                    <% content.sub!(">>#{parent_post_id}",  link_to(">>#{parent_post_id}", board_thr_path(@board, @thr, anchor: parent_post_id))  ) %>    
                <% end %>  
            <% end %> 
            
            <%= content.html_safe %>

            <br>  
        </div>
              
        <% if post.answers.count > 0 %>
            <div class="panel-footer">
                <em> Ответы: </em>
                    <% post.answers.each do |answer| %>
                    <%= link_to ">>#{answer.id}", board_thr_path(@board, @thr, anchor: answer.id) %>
                <% end %>     
            </div>
        <% end %>  
    </div>
<% end %>

<% if user_signed_in? %>
    <%= render "posts/form" %> 
<% else %>
    <center><h2>Login to create post, pls.</h2></center>  
<% end %>      