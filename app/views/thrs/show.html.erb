<center><h2><%= @thr.title %></h2></center>

<% n = 0 %>
<%- @op_post.each do |post| %>
    <div class="panel panel-primary" id="<%= post.id %>">

        <div class="panel-heading">
            <h3 class="panel-title" > 
                №<%= n += 1 %>
                <%= render partial: 'username', :locals => { post: post } %>
                <%= post.created_at %>
                #<%= post.id %>
            </h3>
        </div>

        <div class="panel-body">
            <table>
                <tr valign="top">
                    <td><%= image_tag post.pic.url(:thumb) if post.pic_file_size  %></td>
                    <td class="content"><%= post.content.strip.gsub("\n",'<br>').html_safe %></td>
                </tr>
            </table>          
        </div>
              
        <% if post.answers.count > 0 %>
            <div class="panel-footer">
                <em> Ответы: </em>
                    <% post.answers.each do |answer| %>
                    <%= link_to ">>#{answer.id}", board_thr_path(@board, @thr, anchor: answer.id) %>
                <% end %>     
            </div>
        <% end %>        
    </div>
<% end %>



<%- @simple_posts.each do |post| %> 

    <% if post.sage %>
        <div class="panel panel-danger" id="<%= post.id %>">
    <% else %>    
        <div class="panel panel-success" id="<%= post.id %>">
    <% end %>    
        <div class="panel-heading">
            <h3 class="panel-title">
                №<%= n += 1 %>
                <%= render partial: 'username', :locals => { post: post } %> 
                <%= post.created_at %>
                #<%= post.id %>
            </h3>
        </div>

        <div class="panel-body">
            <table>
                <tr valign="top">
                    <td>
                        <%= image_tag post.pic.url(:thumb) if post.pic_file_size  %>
                    </td>
                    <td class="content">    
                        <%= post.content.strip.gsub("\n",'<br>').html_safe %>
                    </td>
                </tr>
            </table>        
        </div>
              
        <% if post.answers.count > 0 %>
            <div class="panel-footer">
                <em> Ответы: </em>
                    <% post.answers.each do |answer| %>
                    <%= link_to ">>#{answer.id}", board_thr_path(@board, @thr, anchor: answer.id) %>
                <% end %>     
            </div>
        <% end %>  
    </div>
<% end %>

<% if user_signed_in? %>
    <%= render "posts/form" %>     
<% else %>
    <center><h2>Login to create post, pls.</h2></center>  
<% end %>      