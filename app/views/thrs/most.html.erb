<center><h2>Updated Threads</h2></center><br>

<%- @thrs.each do |thr| %> 

    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title"> 
              <%= render partial: 'username', :locals => { post: thr.posts.first } %>   
              <%= thr.posts.first.created_at %>
              #<%= thr.posts.first.id %>  
              <%= link_to board_thr_path(thr.board, thr) do %> 
                <b><%= thr.title %></b> 
              <% end %>  
              from: 
               <%= link_to board_path(thr.board) do %>
                <b><%= thr.board.name %></b>
              <% end %> 
              
            </h3>
        </div>
        <div class="panel-body">
          <table>
            <tr valign="top">
              <td><%= image_tag thr.posts.first.pic.url(:thumb) if thr.posts.first.pic_file_size %></td>
              <td class="content"><%= thr.posts.first.content.gsub("\n",'<br>').html_safe %></td>  
            </tr>
          </table>    
        </div>

        <div class="panel-footer">
           
            <em>Ответов:</em> 
            <%= thr.child_posts_count %>                  
        </div>

    </div>

<% end %>
