<table style="width:100%" class="table">
    <thead>
    <tr>
        <th>Thread</th>
        <th>Board</th>
        <th>Posts</th>
        <th>Created</th>
        <th></th>
        
    </tr>
    </thead>
    <tbody>   
    <% @thrs.each do |thr| %>

        <tr>
            <td class="vert-align">
                <%= link_to [thr.board, thr] do %>
                    <b><%= thr.title %><b>
                <% end %>        
            </td>
            <td class="vert-align"><%= thr.board.name %></td>
            <td class="vert-align"><%= thr.posts.count %></td>
            <td class="vert-align"><%= thr.created_at.to_formatted_s(:short) %></td>
            <td class="vert-align"> <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        Edit <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "Rename", edit_board_thr_path(thr.board, thr) %></li>
                        <li><%= link_to "Delete", [thr.board, thr], method: :delete, data: { confirm: 'Are you sure you want to delete ' + thr.title + ' thread?'} %>
                    </ul>
                </div>
            </td>
            
        </tr>       
    <% end %>
    </tbody>
</table>