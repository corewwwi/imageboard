<center><h2>Sign up</h2></center>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", multipart: true }) do |f| %>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
            <%= error_messages_for(resource) %>
        </div>
    </div> 

    <div class="form-group">
        <%= f.label :username, class: "col-sm-4 control-label" %>
        <div class="col-sm-4"><%= f.text_field :username, class: "form-control",  autofocus: true %></div>
    </div>

    <div class="form-group">
        <%= f.label :email, class: "col-sm-4 control-label" %>
        <div class="col-sm-4"><%= f.text_field :email, class: "form-control",  autofocus: true %></div>
    </div>

    <div class="form-group">
        <%= f.label :password, class: "col-sm-4 control-label" %>
        <div class="col-sm-4"><%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum"  %></div>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
        <div class="col-sm-4"><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %></div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <%= f.submit "Sign up", class: "btn btn-primary" %>         
        </div>
    </div>
<% end %>
<div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
        <%= render "users/shared/links" %>         
    </div>
</div>

