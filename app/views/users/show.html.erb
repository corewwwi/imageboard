<% @page_title = @user.username %>
<center><h2><b><%= @user.username %></b></h2></center>
<center><%= link_to "Edit", edit_user_path(@user), class: "btn btn-default", role: "button" %></center>
<br>
<center>
<table style="width: 500px;" class="table table-bordered">
    <tbody>
    <tr>
        <td>Username</td>
        <td><%= @user.username %></td>
    </tr>
    <tr>
        <td>Email</td>
        <td><%= @user.email %></td>
    </tr>
    <tr>
        <td>Threads created</td>
        <td><%= @user.thrs.count %></td>
    </tr>
    <tr>
        <td>Posts created</td>
        <td><%= @user.posts.count %></td>
    </tr>
    <tr>
        <td>Sign Up</td>
        <td><%= @user.created_at.strftime("%d %b %Y %H:%M:%S") %></td>
    </tr>
    <tr>
        <td>Sign in count</td>
        <td><%= @user.sign_in_count %></td>
    </tr>
    <tr>
        <td>Current Sign in at</td>
        <td><%= @user.current_sign_in_at.strftime("%d %b %Y %H:%M:%S") if @user.current_sign_in_at %> </td>
    </tr>
    <tr>
        <td>Current Sign in IP</td>
        <td><%= @user.current_sign_in_ip %></td>
    </tr>
    <tr>
        <td>Last sign in at</td>
        <td><%= @user.last_sign_in_at.strftime("%d %b %Y %H:%M:%S") if @user.last_sign_in_at  %></td>
    </tr>
    <tr>
        <td>Last Sign in IP</td>
        <td><%= @user.last_sign_in_ip %></td>
    </tr>
    <tr>
        <td>Status</td>
        <td><%=  @user.status %></td>
    </tr>
    </tbody>
</table>
</center>
<br>

</ul>
<center>
<div class="btn-group" role="group" id='user_info'>
    <%= link_to "Threads", show_thrs_user_path, remote: true, id: "thrs_info", class: "btn btn-default", role: "button" %>
    <%= link_to "Posts", show_posts_user_path, remote: true, id: "posts_info", class: "btn btn-default", role: "button" %>
  
</div>
</center>

