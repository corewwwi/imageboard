<% @page_title = 'Boards List' %>
<center><h2><b>Boards List</b></h2></center>
<div align="center">
    <%= link_to 'New Board', new_board_path, class: "btn btn-success", role: "button" %>
</div>
<table style="width:100%" class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Terms</th>
            <th>Pages limit</th>
            <th>Bumplimit</th>
            <th colspan="1"></th>
        </tr>   
    </thead>
    <tbody>
        <% @boards.each do |board| %>
            <tr>
                <td class="vert-align"><b><%= link_to board.name, board %><b></td>
                <td class="vert-align"><%= board.description %></td>
                <td class="vert-align"><%= board.terms %></td>
                <td class="vert-align"><%= board.pages_limit %></td>
                <td class="vert-align"><%= board.bumplimit %></td>
                <td class="vert-align"> 
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            Edit <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><%= link_to "Edit", edit_board_path(board) %></li>
                            <li><%= link_to "Delete", board, method: :delete, data: { confirm: 'Are you sure you want to delete ' + board.name + ' board?'} %></li>
                        </ul>
                    </div>
                </td>
            </tr>       
        <% end %>
    </tbody>
</table>
        
